<!ELEMENT game (title?, map?, tickets*)>
<!ELEMENT title (#PCDATA)>
<!ELEMENT map (((locations?, routes?, colours)|network?), shortest-paths?)>
<!ELEMENT locations (location*, country*)>
<!ELEMENT country (name?, location*)>
<!ELEMENT location (name?)>
<!ELEMENT name (#PCDATA)>
<!ELEMENT routes (route*)>
<!ELEMENT route (location+, colour*)> 
<!ELEMENT colour (name?)>
<!ELEMENT colours (colour*)>
<!ELEMENT tickets (ticket*)>
<!ELEMENT ticket (location*, country*, note?)>
<!ELEMENT note (#PCDATA)>
<!ELEMENT network (nodes, edges)>
<!ELEMENT nodes (node+)> 
<!ELEMENT edges (edge+)>
<!ELEMENT node (name?)>
<!ELEMENT edge (node, node)>
<!ELEMENT shortest-paths (path+)>
<!ELEMENT path (location, location, via*)>
<!ELEMENT via (location*)>

<!ATTLIST game 
	id ID #REQUIRED>
<!ATTLIST map
	seed CDATA #IMPLIED>
<!ATTLIST country 
	id ID #IMPLIED
	ref IDREF #IMPLIED
	points CDATA #IMPLIED>
<!ATTLIST location 
	id ID #IMPLIED
	ref IDREF #IMPLIED
	points CDATA #IMPLIED
	x CDATA #IMPLIED
	y CDATA #IMPLIED>
<!ATTLIST route 
	length (1|2|3|4|5|6|8) #REQUIRED
	colour IDREF #IMPLIED
	tunnel (true|false) "false"
	ferry  (0|1|2) "0"
	microlight (true|false) "false">
<!ATTLIST colour 
	id ID #IMPLIED
	ref IDREF #IMPLIED>
<!ATTLIST ticket 
	points CDATA #IMPLIED>
<!ATTLIST node
	id ID #IMPLIED
	ref IDREF #IMPLIED>
<!ATTLIST edge
	id ID #IMPLIED
	length CDATA #IMPLIED>
<!ATTLIST path
	distance CDATA #IMPLIED>
<!ATTLIST via
	direct (true|false) "false">